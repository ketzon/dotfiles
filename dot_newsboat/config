show-read-feeds no
max-items 100
auto-reload yes
reload-time 15
prepopulate-query-feeds yes
cleanup-on-quit yes
confirm-mark-feed-read no
wrap-scroll yes
text-width 80

ignore-article "*" "title =~ \"#shorts$\""

unbind-key j
unbind-key k
unbind-key J
unbind-key K

bind-key j down
bind-key k up
bind-key h quit
bind-key l open
bind-key g home
bind-key G end
bind-key n next-unread
bind-key N prev-unread
bind-key U show-urls
bind-key R reload-all

browser "mpv %u"

macro v set browser "mpv %u"; open-in-browser ; set browser "mpv"
macro o set browser "yt-dlp -o '~/Videos/%(title)s.%(ext)s' %u"; open-in-browser ; set browser "mpv"
macro i set browser "feh %u"; open-in-browser ; set browser "mpv"
